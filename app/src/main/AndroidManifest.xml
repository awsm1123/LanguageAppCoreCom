<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="awsm.awsmizng.u.alanguageapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/ThemeDark">
        <activity android:name=".activities.Settings"></activity>
        <activity android:name=".activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.Crossway"></activity>
        <activity android:name=".activities.FillInfo" />
        <activity
            android:name=".activities.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"/>

        <service android:name=".helper.UploadArticlesService"
            android:label="UploadArticlesService"/>
    </application>

</manifest>