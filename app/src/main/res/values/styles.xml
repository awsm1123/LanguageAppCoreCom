<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="android:fontFamily">@font/nunito_regular</item>
    <item name="android:textColor">@color/primaryText</item>
  </style>

  <style name="archiveButton">
    <item name="android:background">@drawable/archive_button</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    <item name="android:padding">10dp</item>
    <item name="android:layout_margin">5dp</item>
  </style>

  <style name="profile_grid_header">
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingStart">20dp</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:layout_marginStart">5dp</item>
    <item name="android:layout_gravity">left|top</item>
    <item name="android:textColor">#ddd</item>

  </style>

  <style name="profile_grid_values" parent="profile_grid_header">
    <item name="android:layout_margin">5dp</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:textColor">@color/white</item>
  </style>

</resources>