<resources>

  <!-- Base application theme. -->
  <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:fontFamily">@font/nunito_regular</item>
  </style>

  <style name="l_archiveButton">
     <item name="android:background">@drawable/archive_button</item>
     <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
     <item name="android:padding">10dp</item>
     <item name="android:paddingStart">20dp</item>
     <item name="android:layout_margin">5dp</item>
     <item name="android:gravity">left</item>
      <item name="android:textColor">@color/primaryText</item>
  </style>
  <style name="d_archiveButton">
    <item name="android:background">@drawable/dark_archive_button</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    <item name="android:padding">10dp</item>
    <item name="android:paddingStart">20dp</item>
    <item name="android:layout_margin">5dp</item>
    <item name="android:gravity">left</item>
      <item name="android:textColor">@color/DarkprimaryText</item>
  </style>

  <style name="profile_grid_header">
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingStart">20dp</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:layout_marginStart">5dp</item>
    <item name="android:layout_gravity">left|top</item>
    <item name="android:textColor">#ddd</item>

  </style>

  <style name="profile_grid_values" parent="profile_grid_header">
    <item name="android:layout_margin">5dp</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="settings_style">
    <item name="android:layout_margin">10dp</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    <item name="android:drawablePadding">4dp</item>
    <item name="android:drawableBottom">@drawable/section_divider</item>
    <item name="android:fontFamily">@font/nunito_semibold</item>
    <item name="android:textColor">@color/dull_grey</item>
  </style>


  <style name="l_upload_pic">
    <item name="android:layout_width">150dp</item>
    <item name="android:background">@drawable/upload_selected</item>
    <item name="android:backgroundTint">@color/colorPrimary</item>
    <item name="android:layout_height">150dp</item>
    <item name="android:layout_margin">40dp</item>
  </style>
  <style name="d_upload_pic">
    <item name="android:layout_width">150dp</item>
    <item name="android:background">@drawable/upload_selected</item>
    <item name="android:backgroundTint">@color/DarkcolorPrimary</item>
    <item name="android:layout_height">150dp</item>
    <item name="android:layout_margin">40dp</item>
    <item name="android:padding">20dp</item>
  </style>

  <style name="l_upload_button">
    <item name="android:padding">10dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:layout_margin">10dp</item>
    <item name="android:background">@drawable/ic_upload_button</item>
  </style>
  <style name="d_upload_button">
    <item name="android:padding">10dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:layout_margin">10dp</item>
    <item name="android:background">@drawable/d_ic_upload_button</item>
  </style>

  <style name="l_bottom_nav">
    <item name="android:background">@drawable/bottom_nav_background_light</item>
  </style>
  <style name="d_bottom_nav">
    <item name="android:background">@drawable/bottom_nav_dark</item>
  </style>

  <style name="l_top_bar">
    <item name="android:background">@drawable/profile_top_bar</item>
  </style>
  <style name="d_top_bar">
    <item name="android:background">@drawable/dark_profile_top_bar</item>
  </style>

</resources>