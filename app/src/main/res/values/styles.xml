<resources>

  <!-- Base application theme. -->
  <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:fontFamily">@font/nunito_regular</item>
  </style>

  <style name="archiveButton">
   <!-- <item name="android:background">@drawable/archive_button</item> -->
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    <item name="android:padding">10dp</item>
    <item name="android:layout_margin">5dp</item>
  </style>

  <style name="profile_grid_header">
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingStart">20dp</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:layout_marginStart">5dp</item>
    <item name="android:layout_gravity">left|top</item>
    <item name="android:textColor">#ddd</item>

  </style>

  <style name="profile_grid_values" parent="profile_grid_header">
    <item name="android:layout_margin">5dp</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="settings_style">
    <item name="android:layout_margin">10dp</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    <item name="android:drawablePadding">4dp</item>
    <item name="android:drawableBottom">@drawable/section_divider</item>
    <item name="android:fontFamily">@font/nunito_semibold</item>
    <item name="android:textColor">@color/dull_grey</item>
  </style>


  <style name="l_upload_pic">
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">@drawable/upload_illustration</item>
    <item name="android:layout_height">250dp</item>
  </style>
  <style name="d_upload_pic">
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">@drawable/upload_illustration_dark</item>
    <item name="android:layout_height">250dp</item>
  </style>

  <style name="l_upload_button">
    <item name="android:padding">10dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:layout_margin">10dp</item>
    <item name="android:src">@drawable/ic_upload_button</item>
  </style>
  <style name="d_upload_button">
    <item name="android:padding">10dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:layout_margin">10dp</item>
    <item name="android:background">@drawable/d_ic_upload_button</item>
  </style>

</resources>