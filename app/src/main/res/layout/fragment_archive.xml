<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transitionContainer"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.ArchiveFragment"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/btArchive"
        android:text="Archive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:fontFamily="@font/nunito_bold"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvArchive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btArchive" />

    <LinearLayout
        android:id="@+id/llArticles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/btArchive"
        android:visibility="gone">

        <Button
            android:id="@+id/tvDisplayTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Culture"
            style="?archive_button"
            android:drawableRight="@drawable/vector_up_arrow" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvArticles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </LinearLayout>

